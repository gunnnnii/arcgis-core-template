{
  "name": "arcgis-core-template",
  "version": "1.0.0",
  "description": "ArcGIS API for JavaScript template using Vite and TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/arnofiva/arcgis-core-template"
  },
  "author": "Arno Fiva",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "lint": "npm-run-all --parallel lint:*",
    "lint:eslint": "npx eslint --ext .ts,.tsx,.jsdoc src/",
    "lint:styles": "npm-run-all --serial lint:styles:prettier lint:styles:stylelint",
    "lint:styles:prettier": "prettier --check 'src/**/*.scss'",
    "lint:styles:stylelint": "stylelint --cache 'src/**/*.scss'"
  },
  "dependencies": {
    "@arcgis/core": "^4.27",
    "@esri/calcite-components": "1.4.2",
    "stylelint-config-standard-scss": "^11.0.0",
    "vite": "^4.3.9"
  },
  "devDependencies": {
    "@types/sortablejs": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "3.0.3",
    "sass": "^1.63.4",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "typescript": "^5.2.2"
  }
}
